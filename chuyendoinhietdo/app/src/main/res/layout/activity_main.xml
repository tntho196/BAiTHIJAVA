<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nt.chuyendoinhietdo.MainActivity">

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="493dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtdoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="độ c" />

                <EditText
                    android:id="@+id/editdoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:id="@+id/txtdof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đồ f" />

                <EditText
                    android:id="@+id/editdof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <Button
            android:id="@+id/btnctof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="chuyển độ c sang f" />

        <Button
            android:id="@+id/btnftoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="chuyển độ f sang c" />

        <TextView
            android:id="@+id/kq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết quả" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
